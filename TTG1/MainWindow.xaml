<Window x:Class="TTG1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTG1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1900">
    <Grid>
        <ListView x:Name="listShows" HorizontalAlignment="Left" Height="380" Margin="21,189,0,0" VerticalAlignment="Top" Width="1400">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="819" FontSize="14">
            <MenuItem x:Name="mnuMain" Header="File">
                <MenuItem x:Name="mnuSettings" Header="Settings" Click="mnuSettings_Click"/>
                <MenuItem x:Name="mnuExit" Header="Exit" Click="mnuExit_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="22" Margin="21,108,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="415"/>
    </Grid>
</Window>
